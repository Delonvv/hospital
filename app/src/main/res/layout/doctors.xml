<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="70dp"
        android:text="Наши специалисты"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="415dp"
        android:layout_height="1076dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <!-- Doctor 1 -->
        <RelativeLayout
            android:id="@+id/relativeLayoutDoctor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textViewDoctor1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хорошев Дмитрий, невролог"
                android:textSize="24sp" />

            <!-- Add more details about Doctor 1 here -->

            <Button
                android:id="@+id/buttonRecordDoctor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDoctor1Name"
                android:layout_marginTop="8dp"
                android:text="Сделать запись" />

        </RelativeLayout>

        <!-- Doctor 2 -->
        <RelativeLayout
            android:id="@+id/relativeLayoutDoctor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayoutDoctor1"
            android:layout_marginTop="16dp"
            android:background="@color/gray"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textViewDoctor2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Долгих Иван, окулист"
                android:textSize="24sp" />

            <!-- Add more details about Doctor 2 here -->

            <Button
                android:id="@+id/buttonRecordDoctor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDoctor2Name"
                android:layout_marginTop="8dp"
                android:text="Сделать запись" />

        </RelativeLayout>

        <!-- Doctor 3 -->
        <RelativeLayout
            android:id="@+id/relativeLayoutDoctor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:layout_below="@id/relativeLayoutDoctor2"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textViewDoctor3Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ивано Максим, ортопед"
                android:textSize="24sp" />

            <!-- Add more details about Doctor 3 here -->

            <Button
                android:id="@+id/buttonRecordDoctor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDoctor3Name"
                android:layout_marginTop="8dp"
                android:text="Сделать запись" />

        </RelativeLayout>

        <!-- Suggestion to choose a date -->
        <TextView
            android:id="@+id/textViewSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayoutDoctor3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:textSize="15dp"
            android:text="Не забудьте выбрать дату" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>